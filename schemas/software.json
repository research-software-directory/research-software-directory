{
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "title": "Software schema",
    "required": [
        "brandName",
        "bullets",
        "conceptDOI",
        "contributors",
        "createdAt",
        "getStartedURL",
        "repositoryURLs",
        "isFeatured",
        "isPublished",
